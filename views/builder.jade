extends layout
  
block title 
  title Sequence Builder
  
block content
  header
    h1 New Sequence
    nav 
      a(href='/users/#{user_id}')#profile Profile
  main.builder
    nav.elements 
      div.selectbox
        select
          each category in categories
            option(value=category.id)= category.name  
    form.builder(action='/sequence' method='post')
      label(for="name") Name
        input(type="text" id="name" name="name" placeholder="sequence name")
      button(type='button') 
        a Save Sequence
block scripts
  script.
    var user_id = !{JSON.stringify(user_id)};
    var posecategories = !{JSON.stringify(posecategories)}
    var sequence = null, time = null, usersequence_id = null;
  if sequence 
    script.
      sequence = !{JSON.stringify(sequence)}
      time = !{JSON.stringify(time)}
      usersequence_id = !{JSON.stringify(usersequence_id)}
  script(src='/js/builder.js')
      
