extends layout
  
block title 
  title Stuart's sequence Builder
  
block content
  header
    h1 New Sequence
    nav 
      a(href='/users/' + user_id + '/' id='profile') Profile
  main.builder
    nav.elements 
      div.selectbox
        select
          each category in categories
            option(value=category.id)= category.name  
    form.builder(action='/sequence' method='post')
      button(type='button') 
        a Save Sequence
block scripts
  script.
    var user_id = !{JSON.stringify(user_id)};
    var posecategories = !{JSON.stringify(posecategories)}
  if sequence 
    script.
      var sequence = !{JSON.stringify(sequence)}
  script(src='/js/builder.js')
      
