extends ../layout

block title
  title= name

block content
  header
    h1= name
  main.user
    div.userInfo
      img(src='http://placehold.it/200x200')
      div.info
        p= "Location: " + location
        p= "Specialty: " + specialty
        ul
          li Interests
          each interest in interests
            li= interest
    div.favoriteSequences.box
      h2 Favorite Sequences
      each sequence in favorites
        div.saved
          h4= sequence.creator
      div.buttons
        button
          a(href='/sequences/all') All Sequences
    div.personalSequences.box
      h2 My Sequences
      each sequence in sequences
        div.saved
          h4= sequence.name
          a(href='/users/' + user_name + '/builder/' + sequence.id) Edit
      div.buttons
        button
          a(href='/users/' + user_name + '/builder/new') New Sequence
    
